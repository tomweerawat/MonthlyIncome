    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/tb"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop"
            android:layout_marginStart="@dimen/marginleft"
            android:layout_marginEnd="@dimen/marginright"
            android:layout_marginBottom="@dimen/marginbottom"
            android:maxLength="10"
            android:inputType="date"
            android:id="@+id/startdate"
            android:hint="2018-03-01"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/enddate"
            android:layout_height="wrap_content"
            android:hint="2018-03-15"
            android:layout_marginTop="@dimen/margintop"
            android:layout_marginStart="@dimen/marginleft"
            android:layout_marginEnd="@dimen/marginright"
            android:layout_marginBottom="@dimen/marginbottom"
            android:maxLength="10"
            android:inputType="date"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_marginTop="@dimen/margintop"
            android:layout_marginStart="@dimen/marginleft"
            android:layout_marginEnd="@dimen/marginright"
            android:layout_marginBottom="@dimen/marginbottom"
            android:hint="android@gmail.com,test@gmail.com"/>

        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margintop"
            android:layout_marginStart="@dimen/marginleft"
            android:layout_marginEnd="@dimen/marginright"
            android:layout_marginBottom="@dimen/marginbottom"
            android:id="@+id/btnseperate"
            android:text="Ok"
            android:layout_height="50dp"/>

    </LinearLayout>
