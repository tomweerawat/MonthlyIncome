<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">


        <!-- Text Notice Name -->
        <TextView
            android:id="@+id/transactiondatetime"
            android:layout_width="match_parent"
            android:textSize="26sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="3dp"/>

        <!-- Text Notice Description -->
        <TextView
            android:id="@+id/commissionfromerchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" />

        <!-- Text Notice FilePath -->
        <TextView
            android:id="@+id/merchantnetincome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="3dp"/>
        <!-- Text Notice Description -->
        <TextView
            android:id="@+id/feeincludevat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp" />

        <!-- Text Notice FilePath -->
        <TextView
            android:id="@+id/discountfromcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/coinused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/billaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/taxNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totaldiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/vatcase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/custLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/custName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />
    <TextView
            android:id="@+id/nameoftax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/incomefromcust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp" />


    </LinearLayout>

</android.support.v7.widget.CardView>